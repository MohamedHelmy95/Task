<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_200</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:fontFamily">@font/font</item>
    </style>


    <style name="Theme.Task.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Task.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="Theme.MyCircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="Widget.Task.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mainFont</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/space_4</item>
    </style>

    <style name="Widget.Task.NotificationTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/badgeFont</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="search_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">@dimen/space_16</item>

        <item name="android:layout_marginTop">@dimen/space_16</item>
        <item name="android:drawablePadding">@dimen/space_8</item>
        <item name="android:textSize">@dimen/secondFont</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_shape_stroke</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:elevation">@dimen/space_2</item>
    </style>

    <style name="foodRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:numStars">5</item>
    </style>

</resources>